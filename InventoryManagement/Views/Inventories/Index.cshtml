@model InventoryManagement.ViewModel.InventoryViewModel

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>@Html.ActionLink("Next Day Process", "Index", "Process", null, new { @class = "btn btn-primary btn-large" })</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StockItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sellin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quality)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.InventoriesList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StockItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sellin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quality)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
